{
  // extend your base config so you don't have to redefine your compilerOptions
  "extends": "./tsconfig.json",
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*.js",
    "./.eslintrc.js"
  ],
  "exclude": [
    "functions/.eslintrc.json",
    "functions",
    "node_modules**",
    ".nuxt**",
    ".idea**",
    ".ide-setup**",
    ".firebase**",
    ".github**",
    "tests**",
    "functions**"
  ],
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2019.object",
      "esnext",
      "esnext.asynciterable",
      "dom"
    ]
  }
}