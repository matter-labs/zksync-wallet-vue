{
  "compilerOptions": {
    "rootDir": "functions/src",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "firebase-functions"
    ]
  },
  "include": [
    "functions/src/**/*.ts"
  ],
  "exclude": [
    "nuxt.config.ts",
    "functions/node_modules",
    "functions/lib"
  ]
}
