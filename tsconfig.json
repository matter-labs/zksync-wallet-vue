{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es2019",
      "dom",
      "es2019.object",
      "esnext",
      "dom.iterable",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/sentry",
      "@matterlabs/zksync-nuxt-core",
      "vue-router",
      "@types/jest",
      "web3-core/types",
      "@inkline/inkline/types",
      "nuxt-typed-vuex",
      "vue-qrcode"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "functions",
    "node_modules",
    "dist",
    ".yarn",
    "public",
    ".nuxt",
    ".github",
    "environments",
    "tests"
  ]
}
